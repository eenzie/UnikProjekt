@model WebHousingAssociation.Models.ViewModels.CombinedViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!--Add CSS stylesheet-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!--Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!--Mobile responsive-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <!--Navbar-->
    <nav class="navbar navbar-expand-sm custom-navbar">
        <div class="container">
            <a class="navbar-brand" href="/">
                @if (Model != null && Model.ThemeViewModel != null && Model.ThemeViewModel.LogoPath != null)
                {
                    <img src="@Model.ThemeViewModel.LogoPath" alt="Company Logo" style="max-height: 40px;">
                }
                Boligforening
            </a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Dokumenter</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Information</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Booking</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Login">
                        <img src="~/Icons/Login.png" alt="Login" style="max-height: 20px;">
                        Log ind
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Your content will be rendered here -->
    @RenderBody()

    <!--Footer-->
    <footer class="footer py-5 custom-footer" style="background-color: #F2F3F4;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    @if (Model != null && Model.BasePageViewModel != null)
                    {
                        <span class="text-muted"> Husk at tilføje footer indhold..... @Model.BasePageViewModel.FooterContent</span>
                    }
                </div>
                <div class="col-md-6 text-end">
                    <div class="social-icons">
                        <a href="https://www.linkedin.com/" target="_blank"><i class="bi bi-linkedin" style="color: #006d77;"></i></a>
                        <a href="https://www.facebook.com/" target="_blank"><i class="bi bi-facebook" style="color: #006d77;"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>