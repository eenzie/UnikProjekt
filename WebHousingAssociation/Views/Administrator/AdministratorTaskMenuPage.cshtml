@{
    Layout = Layout;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrators Menu</title>
    <link rel="stylesheet" href="site.css"> 
</head>
<body>
    <div class="container mt-6" style="margin-top: 100px;">
        <h2>Vælg en opgave</h2>
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Opret ny booking</h5>
                        <p class="card-text">Her kan du oprette en ny booking til boligforeningen.</p>
                        <a href="#" class="btn custom-button">Gå til booking</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Upload dokumenter</h5>
                        <p class="card-text">Her kan du uploade diverse dokumenter til boligforeningen.</p>
                        <a href="#" class="btn custom-button">Gå til dokumenter</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sende beskeder</h5>
                        <p class="card-text">Her kan du sende beskeder til beboerne i boligforeningen.</p>
                        <a href="#" class="btn custom-button">Gå til beskeder</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Opdatere bestyrelsesmedlem</h5>
                        <p class="card-text">Her kan du opdatere information om bestyrelsesmedlemmerne.</p>
                        <a href="#" class="btn custom-button">Gå til bestyrelsen</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>