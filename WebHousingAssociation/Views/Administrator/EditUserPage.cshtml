@model WebHousingAssociation.Models.ViewModels.UserViewModel

@{
    Layout = Layout;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="site.css">
    <title>Rediger Bruger</title>
</head>
<body>
    <div class="container mt-6" style="margin-top: 100px;">
        <h2>Rediger Bruger</h2>
        <form asp-action="Edit" method="post">
            <!-- Felter til redigering af bruger -->
            <div class="form-group">
                <label for="Name">Navn:</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
            </div>
            <div class="form-group">
                <label for="Address">Adresse:</label>
                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required>
            </div>
            <div class="form-group">
                <label for="PostalCode">Postnummer:</label>
                <input type="text" class="form-control" id="PostalCode" name="PostalCode" value="@Model.PostalCode" required>
            </div>
            <div class="form-group">
                <label for="City">By:</label>
                <input type="text" class="form-control" id="City" name="City" value="@Model.City" required>
            </div>
            <div class="form-group">
                <label for="Phone">Mobil Telefon:</label>
                <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone" required>
            </div>
            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password" required>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Gem Ændringer</button>
            </div>
        </form>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>