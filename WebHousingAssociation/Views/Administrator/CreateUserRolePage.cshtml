@model WebHousingAssociation.Models.ViewModels.UserRoleViewModel 

@{
    Layout = Layout;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="site.css">
</head>
<body>
    <div class="container mt-6" style="margin-top: 100px;">
        <h2>Opret Brugerrolle</h2>
        <form asp-action="CreateRole" method="post">
            <div class="form-group">
                <label for="RoleName">Rollenavn:</label>
                <input type="text" class="form-control" id="RoleName" name="RoleName" required>
            </div>
            <div class="form-group">
                <label for="SecurityLevel">Sikkerhedsniveau:</label>
                <select class="form-control" id="SecurityLevel" name="SecurityLevel" required>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="mt-4">
            <button type="submit" class="btn custom-button">Opret Brugerrolle</button>
            </div>
        </form>
    </div>
</body>
</html>