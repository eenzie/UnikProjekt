@model WebHousingAssociation.Models.ViewModels.BoardRoleViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valg af bestyrelse</title>
    <link rel="stylesheet" href="site.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        /* Tilføjet stil for at skabe en margin mellem knappen og den næste menige bestyrelsesmedlemsformular */
        .menige-group .menige {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="container" style="margin-top: 70px;">
        <h2>Valg af bestyrelse</h2>
        <hr />

        <!-- Formand -->
        <div class="row">
            <div class="col-md-3">
                <label>Formand</label>
            </div>
            <div class="col-md-9">
                <select class="form-control form-control-sm board-role">
                    <option value="">Vælg beboer</option>
                    <option>Beboer 1</option>
                    <option>Beboer 2</option>
                    <option>Beboer 3</option>
                </select>
                <p class="ml-2 mt-1 mb-0"><strong>Ændringsdato:</strong> <input type="date" class="change-date"></p>
            </div>
        </div>
        <hr />

        <!-- Kasser -->
        <div class="row">
            <div class="col-md-3">
                <label>Kasser</label>
            </div>
            <div class="col-md-9">
                <select class="form-control form-control-sm board-role">
                    <option value="">Vælg Beboer</option>
                    <option>Beboer 1</option>
                    <option>Beboer 2</option>
                    <option>Beboer 3</option>
                </select>
                <p class="ml-2 mt-1 mb-0"><strong>Ændringsdato:</strong> <input type="date" class="change-date"></p>
            </div>
        </div>
        <hr />

        <!-- Menige bestyrelsesmedlemmer -->
        <div class="row menige-group">
            <div class="col-md-3">
                <label>Menige bestyrelsesmedlemmer</label>
            </div>
            <div class="col-md-9">
                <div class="menige">
                    <select class="form-control form-control-sm board-role">
                        <option value="">Vælg beboer</option>
                        <option>Beboer 1</option>
                        <option>Beboer 2</option>
                        <option>Beboer 3</option>
                    </select>
                    <p class="ml-2 mt-1 mb-0"><strong>Ændringsdato:</strong> <input type="date" class="change-date"></p>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="button" class="btn add-member-button">Tilføj Menige Bestyrelsesmedlem</button>
                    </div>
                </div>
            </div>
        </div>
        <hr />

        <!-- Suppleant -->
        <div class="row suppleant-group">
            <div class="col-md-3">
                <label>Suppleant</label>
            </div>
            <div class="col-md-9">
                <div class="suppleant">
                    <select class="form-control form-control-sm board-role">
                        <option value="">Vælg beboer</option>
                        <option>Beboer 1</option>
                        <option>Beboer 2</option>
                        <option>Beboer 3</option>
                    </select>
                    <p class="ml-2 mt-1 mb-0"><strong>Ændringsdato:</strong> <input type="date" class="change-date"></p>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="button" class="btn add-suppleant-button">Tilføj Suppleant</button>
                    </div>
                </div>
            </div>
        </div>
        <hr />

        <div class="row mt-3">
            <div class="col-md-12">
                <button type="button" class="btn custom-button float-end">Gem</button>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Dropdown change event handler
            $('.board-role').change(function () {
                var selectedDate = new Date().toLocaleDateString();
                $(this).parent().find('.change-date').val(selectedDate);
            });

            // Add menigt bestyrelsesmedlem button click event handler
            $('.add-member-button').click(function () {
                var newMemberSelect = '<div class="row menige">' +
                    '<div class="col-md-4">' +
                    '<label>Menige Bestyrelsesmedlem</label>' +
                    '</div>' +
                    '<div class="col-md-9">' +
                    '<select class="form-control form-control-sm board-role">' +
                    '<option value="">Vælg beboer</option>' +
                    '<option>Beboer 1</option>' +
                    '<option>Beboer 2</option>' +
                    '<option>Beboer 3</option>' +
                    '</select>' +
                    '<p class="ml-2 mt-1 mb-0"><strong>Ændringsdato:</strong> <input type="date" class="change-date"></p>' +
                    '</div>' +
                    '</div>';
                $('.menige-group').append(newMemberSelect);
            });

            // Add suppleant button click event handler
            $('.add-suppleant-button').click(function () {
                var newSuppleantSelect = '<div class="row suppleant">' +
                    '<div class="col-md-4">' +
                    '<label>Suppleant</label>' +
                    '</div>' +
                    '<div class="col-md-9">' +
                    '<select class="form-control form-control-sm board-role">' +
                    '<option value="">Vælg beboer</option>' +
                    '<option>Beboer 1</option>' +
                    '<option>Beboer 2</option>' +
                    '<option>Beboer 3</option>' +
                    '</select>' +
                    '<p class="ml-2 mt-1 mb-0"><strong>Ændringsdato:</strong> <input type="date" class="change-date"></p>' +
                    '</div>' +
                    '</div>';
                $('.suppleant-group').append(newSuppleantSelect);
            });
        });
    </script>
</body>
</html>